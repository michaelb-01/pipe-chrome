{
  "manifest_version": 2,

  "name": "Pipe - Reference Tool",
  "description": "This tool saves images and videos to the Pipe database",
  "version": "1.1",
  "background": {
    "scripts": ["require.js", "jquery-3.3.1.min.js", "popup.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://cdn.socket.io; object-src 'self'",
  "permissions": [
      "tabs",
      "http://*/",
      "https://*/"
  ]
}